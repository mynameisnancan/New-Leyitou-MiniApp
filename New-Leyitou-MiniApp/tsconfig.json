// tsconfig.json
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "@dcloudio/types"
    ]
  },
  "include": [
    "components/**/*",
		"pages/**/*",
		"api/**/*",
		"sub_page/**/*",
		"types/**/*.ts",
		"types/**/*d.ts",
		"vite.config.ts"
  ],
  "exclude": [
		"node_modules",
		"unpackage",
		"src/**/*.nvue"
  ]
}
